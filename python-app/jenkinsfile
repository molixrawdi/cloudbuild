pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                println "This is the begginig of the docker file on node 01".execute().text 
                sh 'wget https://github.com/molixrawdi/cloudbuild/blob/main/python-app/requirements.txt'
                sh 'wget https://github.com/molixrawdi/cloudbuild/blob/main/python-app/app.py'
                sh 'wget https://github.com/molixrawdi/cloudbuild/blob/main/python-app/Dockerfile'
                sh 'docker build -t my-image .'
            }
        }
        stage('Deploy') {
            steps {
                deployToDocker()  // <-- Custom shared library or plugin
            }
        }
    }
}
